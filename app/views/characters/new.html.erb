<h1>Character Creation</h1>
    <%= form_for(@character) do |f| %>
        <%= f.label :race %>
        <br>
        <% Character.races.each_key do |race| %>
            <%= f.radio_button :race, race %>
            <%= f.label race.to_sym %>
        <% end %>
        
        <br><br>
        
        <%= f.label :characterClass %>
        <br>
        <% Character.characterClasses.each_key do |c| %>
            <%= f.radio_button :characterClass, c %>
            <%= f.label c.to_sym %>
        <% end %>
        
        <br><br>
        
        <%= f.label :backstory %>
        <br>
        <% Character.backstories.each_key do |b| %>
            <%= f.radio_button :backstory, b %>
            <%= f.label b.to_sym %>
        <% end %>
        
        <br><br>
        
        <%= f.submit %>
    
    <% end %>
